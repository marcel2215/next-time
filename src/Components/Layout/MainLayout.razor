@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ApplicationUserManager UserManager

<main>
    <article>
        <div class="flex bg-gray-100 min-h-screen min-w-screen justify-center items-center">
            <div class="flex flex-col min-h-screen w-full sm:max-w-screen-sm p-8 sm:p-12 bg-white">
                <CascadingValue Value="_user">
                    @Body
                </CascadingValue>
            </div>
        </div>
    </article>
</main>

@code {
    private ApplicationUser? _user;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _user = await UserManager.GetAsync(state.User) ?? throw new Exception("Authentication failed.");
    }
}
